<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="141dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:src="@drawable/digimon_simbol" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCORE: "
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00000"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#dedede"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="128dp"
                    android:src="@drawable/agumon" />

                <Button
                    android:id="@+id/btn_selecionar_1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#da6600"
                    android:text="SELECIONAR"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#dedede"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gabumon" />

                <Button
                    android:id="@+id/btn_selecionar_2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#3c22fc"
                    android:text="SELECIONAR"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#dedede"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lopmon" />

                <Button
                    android:id="@+id/btn_selecionar_3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#864d18"
                    android:text="SELECIONAR"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
